---
apiVersion: helm.toolkit.fluxcd.io/v2beta2
kind: HelmRelease
metadata:
  name: &app firefly3
  namespace: home
spec:
  interval: 15m
  chart:
    spec:
      chart: firefly-iii-stack
      version: 8.5.2
      sourceRef:
        kind: HelmRepository
        name: firefly-iii
        namespace: flux-system
  maxHistory: 2

  install:
    createNamespace: true
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3
  uninstall:
    keepHistory: false
  values:
    firefly-db:
      configs:
        TZ: ${TIMEZONE}
        PGPASSWORD:
          valueFrom:
            secretKeyRef:
              name: firefly3-secret
              key: PGPASSWORD

    firefly-iii:
      ingress:
        main:
          enabled: true
          ingressClassName: "internal"
          hosts:
            - host: &host "firefly.${SECRET_DOMAIN}"
              paths:
                - path: /
                  pathType: Prefix
          tls:
            - hosts:
                - *host
