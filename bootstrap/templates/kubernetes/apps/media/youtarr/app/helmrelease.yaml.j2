---
apiVersion: helm.toolkit.fluxcd.io/v2beta2
kind: HelmRelease
metadata:
  name: &app youtarr
  namespace: media
spec:
  interval: 15m
  chart:
    spec:
      # renovate: registryUrl=https://bjw-s.github.io/helm-charts/
      chart: app-template
      version: 2.4.0
      sourceRef:
        kind: HelmRepository
        name: bjw-s
        namespace: flux-system
  maxHistory: 2
  install:
    createNamespace: true
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3
  uninstall:
    keepHistory: false
  values:
    controllers:
      youtarr-db:
        containers:
          youtarr-db:
            image:
              repository: mariadb
              tag: 10.3
            name: youtarrdb
            env:
              MYSQL_ROOT_PASSWORD:
                valueFrom:
                  secretKeyRef:
                    name: youtarr-secrets
                    key: POSTGRES_PASS
              MYSQL_DATABASE: youtarr
              MYSQL_TCP_PORT: 3306
              MYSQL_CHARSET: utf8mb4
              MYSQL_COLLATION: utf8mb4_unicode_ci
      main:
        annotations:
          reloader.stakater.com/auto: "true"
        containers:
          main:
            image:
              repository: dialmaster/youtarr
              tag: latest
            name: youtarr
            env:
              PORT: &port 3011
              TZ: ${TZ:-UTC}
              DB_HOST: youtarrdb
              DB_PORT: 3306
              DB_USER: root
              DB_PASSWORD:
                valueFrom:
                  secretKeyRef:
                    name: youtarr-secrets
                    key: POSTGRES_PASS
              DB_NAME: youtarr
            probes:
              liveness: &probes
                enabled: true
                custom: true
                spec:
                  httpGet:
                    path: /api/health
                    port: *port
                  initialDelaySeconds: 0
                  periodSeconds: 10
                  timeoutSeconds: 1
                  failureThreshold: 3
              readiness: *probes
              startup:
                enabled: false

    env:
      TZ: ${TIMEZONE}
      PUID: 1000
      PGID: 1000

    service:
      main:
        ports:
          http:
            port: *port
    ingress:
      main:
        enabled: true
        className: internal
        annotations:
          hajimari.io/enable: "true"
          hajimari.io/icon: "television-box"
        hosts:
          - host: &host "youtarr.${SECRET_DOMAIN}"
            paths:
              - path: /
                pathType: Prefix
                service:
                  name: main
                  port: http
        tls:
          - hosts:
              - *host
    podSecurityContext:
      supplementalGroups:
        - 1000

    persistence:
      config:
        enabled: true
        mountPath: /config
        storageClass: longhorn
        size: 2Gi
        retain: true

      downloads:
        enabled: true
        mountPath: /downloads
        type: custom
        volumeSpec:
          nfs:
            server: "{{ media_nfs_host }}"
            path: "{{ media_nfs_downloads_path }}"

      temp:
        enabled: true
        mountPath: /tv2
        type: custom
        volumeSpec:
          nfs:
            server: "{{ media_nfs_host }}"
            path: "{{ media_nfs_temp_path }}"
