---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: media-tv-vol
spec:
  storageClassName: media-nfs-tv
  capacity:
    storage: 1Mi
  accessModes: ["ReadWriteMany"]
  persistentVolumeReclaimPolicy: Retain
  nfs:
    server: {{ media_nfs_host }}
    path: {{ media_nfs_tv_path }}
  mountOptions:
    - nfsvers=4.1
    - nconnect=8
    - hard
    - noatime
    - rsize=131072
    - wsize=131072
