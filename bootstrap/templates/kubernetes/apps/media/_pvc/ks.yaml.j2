---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: pvc-media-tv
  namespace: flux-system
spec:
  targetNamespace: media
  path: ./kubernetes/apps/media/_pvc/media_tv
  prune: true
  sourceRef:
    kind: GitRepository
    name: home-kubernetes
  wait: true
  interval: 30m
  retryInterval: 1m
  timeout: 5m
